  "paths": {
    "/user/login": {
      "post": {
        "summary": "Login on the application",
        "description": "This route is responsible for create a token for the user",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/user"
              },
              "examples": {
                "login": {
                  "value": {
                    "username": "testUser",
                    "password": "testPassword"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "404": {
            "description": "User not found"
          },
          "400": {
            "description": "Invalid username and/or password format(s)"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "auth": {
                      "type": "boolean"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "summary": "Create an user for the application",
        "description": "This route is responsible for create a user on the application",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/user"
              },
              "examples": {
                "createUser": {
                  "value": {
                    "username": "testUser",
                    "password": "testPassword"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Invalid username and/or password format(s)"
          },
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update the password for an user of the application",
        "description": "This route is responsible for update the password for an user of the application",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "updatePassword": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    },
                    "newPassword": {
                      "type": "string"
                    }
                  }
                }
              },
              "examples": {
                "updatePassword": {
                  "value": {
                    "username": "testUser",
                    "password": "testPassword",
                    "newPassword": "testNewPassword"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Invalid username and/or password format(s)"
          },
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
